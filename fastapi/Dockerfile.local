FROM python:3.11

WORKDIR /app

# Копируем только requirements.txt сначала для кэширования слоя установки пакетов
COPY requirements.txt .

# Устанавливаем зависимости (этот слой будет кэшироваться, если requirements.txt не изменился)
RUN pip install --no-cache-dir -r requirements.txt

# Остальные файлы будут монтироваться через volume в docker-compose
# Это позволяет использовать кэш Docker для установки пакетов
# и при этом иметь hot-reload при изменении кода

