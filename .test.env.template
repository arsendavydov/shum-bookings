# ============================================================================
# ШАБЛОН ПЕРЕМЕННЫХ ОКРУЖЕНИЯ ДЛЯ ТЕСТОВ
# ============================================================================
# Скопируйте этот файл в .test.env и заполните безопасными значениями
# .test.env НЕ должен коммититься в Git

# ============================================================================
# База данных PostgreSQL (тестовая)
# ============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=test
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME_TEST_DB_PASSWORD

# ============================================================================
# JWT настройки
# ============================================================================
# Для тестов можно использовать отдельный ключ (НЕ прод)
JWT_SECRET_KEY=CHANGE_ME_TEST_JWT_SECRET
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_COOKIE_SECURE=false  # В тестах обычно HTTP

# ============================================================================
# Redis настройки
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Логирование
# ============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT_JSON=false

# ============================================================================
# Ограничения на загрузку файлов
# ============================================================================
MAX_IMAGE_FILE_SIZE_MB=10

# ============================================================================
# Тестовые данные (НЕ продакшен секреты)
# ============================================================================
TEST_PASSWORD=testpass123
TEST_EXAMPLE_EMAIL_DOMAIN=shum-booking.com

# ============================================================================
# Root path для работы за прокси
# ============================================================================
# Для тестов обычно пусто
ROOT_PATH=

# ============================================================================
# Rate Limiting в тестах
# ============================================================================
# По умолчанию rate limiting отключен, чтобы не мешать тестам.
# Можно включить через RATE_LIMIT_ENABLED_IN_TESTS=true.
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_AUTH_PER_MINUTE=1000

# ============================================================================
# Python настройки
# ============================================================================
PYTHONUNBUFFERED=1  # Отключить буферизацию вывода Python для Docker

